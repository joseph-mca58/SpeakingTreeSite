<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>

        @ViewBag.Title - Speaking Tree
    </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Speaking Tree", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li>@Html.ActionLink("Grammar Quest", "GrammarQuest", "Home")</li>
                    <li>@Html.ActionLink("Downloads", "Downloads", "Home")</li>
                    <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                    <li>@Html.ActionLink("Careers", "Careers", "Home")</li>
                    <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Login / Register", "Login", "Home")</li>
                    @if (HttpContext.Current.Session["UserRole"] != null && HttpContext.Current.Session["UserRole"].ToString().ToLower() == "student")
                    {
                        <li>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">School</a>
                            <ul aria-labelledby="themes" class="dropdown-menu">
                                <li>@Html.ActionLink("Pay for Exam", "Student", "PayForExam")</li>
                                <li>@Html.ActionLink("View Result", "Student", "ViewResult")</li>
                                <li>@Html.ActionLink("Write Exam", "Student", "WriteExam")</li>
                                <li>@Html.ActionLink("DownloadMaterial", "Student", "Donwload")</li>
                            </ul>
                        </li>
                    }
                    @if (HttpContext.Current.Session["UserRole"] != null && HttpContext.Current.Session["UserRole"].ToString().ToLower() == "school")
                    {
                        <li>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">School</a>
                            <ul aria-labelledby="themes" class="dropdown-menu">
                                <li>@Html.ActionLink("Pay for Exam", "School", "PayForExam")</li>
                                <li>@Html.ActionLink("View Results", "School", "ViewResults")</li>
                                <li>@Html.ActionLink("Upload Student Details", "School", "UploadStudents")</li>
                                <li>@Html.ActionLink("DownloadMaterial", "School", "Donwload")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"><img src="~/pics/WhatsApp Image 2019-11-04 at 8.02.26 AM.jpeg" height="100" width="100" /></div>
        <div class="col-md-1">
            <ul class="nav navbar-nav">
                @if (!(string.IsNullOrEmpty(Convert.ToString(Session["Role"]))))
                {
                    <li>Welcome : @Session["Username"]</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                }
            </ul>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Speaking Tree</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
